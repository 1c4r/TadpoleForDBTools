<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.hangum.db.browser.rap.core.category.info"
            name="%category.name">
      </category>
      <view
            category="com.hangum.db.browser.rap.core.category.info"
            class="com.hangum.db.browser.rap.core.viewers.connections.ManagerViewer"
            icon="resources/icons/database_table.png"
            id="com.hangum.db.browser.rap.core.view.connection.manager"
            name="%view.name"
            restorable="true">
      </view>
      <view
            category="com.hangum.db.browser.rap.core.category.info"
            class="com.hangum.db.browser.rap.core.viewers.object.ExplorerViewer"
            icon="resources/icons/object-explorer.png"
            id="com.hangum.db.browser.rap.core.view.object.explorer"
            name="%view.name.0"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.hangum.db.browser.rap.core.editors.intro.IntroEditor"
            default="false"
            icon="resources/icons/information-white.png"
            id="com.hangum.db.browser.rap.core.editor.intor"
            name="%editor.name">
      </editor>
      <editor
            class="com.hangum.db.browser.rap.core.editors.main.MainEditor"
            default="false"
            icon="resources/icons/sql-query.png"
            id="com.hangum.db.browser.rap.core.editor.main"
            name="%editor.name.0">
      </editor>
      <editor
            class="com.hangum.db.browser.rap.core.editors.table.TableViewerEditPart"
            icon="resources/icons/database_table.png"
            id="com.hangum.db.browser.rap.core.editors.table.TableViewerEditPart"
            name="Table Data Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="com.hangum.db.browser.rap.core.viewerContribution.managerViewer.table"
            targetID="com.hangum.db.browser.rap.core.view.connection.manager">
         <menu
               id="conn.main"
               label="Connection Manager"
               path="additions">
            <groupMarker
                  name="group1">
            </groupMarker>
            <separator
                  name="group1-separator">
            </separator>
            <groupMarker
                  name="create-group">
            </groupMarker>
            <separator
                  name="create-separator">
            </separator>
         </menu>
         <action
               class="com.hangum.db.browser.rap.core.actions.erd.ERDDeleteAction"
               icon="resources/icons/delete-relation.png"
               id="com.hangum.db.erd.delete.action"
               label="Delete Resource"
               menubarPath="conn.main/group-delete">
            <enablement>
               <objectClass
                     name="com.hangum.db.dao.system.UserDBResourceDAO">
               </objectClass>
            </enablement>
         </action>
    
         <action
               class="com.hangum.db.browser.rap.core.actions.erd.ERDViewAction"
               icon="resources/icons/relation.png"
               id="com.hangum.db.erd.action"
               label="Create ERD Diagram"
               menubarPath="conn.main/group1">
            <enablement>
               <objectClass
                     name="com.hangum.db.dao.system.UserDBDAO">
               </objectClass>
            </enablement>
         </action>
         <action
               class="com.hangum.db.browser.rap.core.actions.erd.ERDAllTableViewAction"
               icon="resources/icons/relation.png"
               id="com.hangum.db.erd.action.all"
               label="All Table ERD"
               menubarPath="conn.main/group1">
            <enablement>
               <objectClass
                     name="com.hangum.db.dao.system.UserDBDAO">
               </objectClass>
            </enablement>
         </action>
         <action
               class="com.hangum.db.browser.rap.core.actions.connections.DisconnectDBAction"
               icon="resources/icons/disconnect.png"
               id="com.hangum.db.browser.rap.core.action.connection.disconnectdb"
               label="Disconnnect Database"
               menubarPath="conn.main/group1">
            <enablement>
               <objectClass
                     name="com.hangum.db.dao.system.UserDBDAO">
               </objectClass>
            </enablement>
         </action>
         <action
               class="com.hangum.db.browser.rap.core.actions.connections.ConnectDatabase"
               icon="resources/icons/connect.png"
               id="com.hangum.db.browser.rap.core.action.connect.database"
               label="%action.label.2"
               menubarPath="conn.main/group1">
         </action>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.hangum.db.browser.rap.core.preference.DefaultPreferencePage"
            id="com.hangum.db.browser.rap.core.page"
            name="Basic RDB Setting">
      </page>
      <page
            class="com.hangum.db.browser.rap.core.preference.UserInfoPerference"
            id="com.hangum.db.browser.rap.core.page.userInfo"
            name="User Setting">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.hangum.db.browser.rap.core.preference.AbstractPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/orion"
            base-name="/orion">
      </resource>
      <resource
            alias="/editorService"
            base-name="/editorService">
      </resource>
   </extension>

</plugin>
