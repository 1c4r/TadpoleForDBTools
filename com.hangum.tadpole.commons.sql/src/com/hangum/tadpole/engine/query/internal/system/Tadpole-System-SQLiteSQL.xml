<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Tadpole-System-SQLiteSQL">

	<!--
		============================================================================================================================ 
		user table이 있는 지 여부에 따라 시스템 테이블의 존재 유무를 가린다.
		============================================================================================================================
	 -->
	<select id="isUserTable" resultClass="java.lang.String">
		SELECT name 
		FROM sqlite_master
		WHERE 
			type = 'table' and 
			name = 'tadpole_system'  
	</select>
	
	<!-- 
	=========================================================================================================
	notes 정보.
	=========================================================================================================
 	-->
	<select id="findNotes" resultClass="com.hangum.tadpole.sql.dao.system.NotesDAO" parameterClass="java.util.Map">
		SELECT 
			seq,
		    types,
		    sender_seq,
			(select email from user
			where  seq = sender_seq) sendUserId,
		    receiver_seq,
		    (select email from user
			where  seq = receiver_seq) receiveUserId,
			title,
		    sender_date,
		    receiver_date,
		    is_read,
		    sender_delyn,
		    receiver_delyn,
		    create_time,
		    delyn  
		FROM notes
		<dynamic prepend="WHERE">
			<isEqual prepend="AND" property="types" compareValue="Send">
				sender_seq = #userSeq#
			</isEqual>
			<isEqual prepend="AND" property="types" compareValue="Receive">
				receiver_seq = #userSeq#
			</isEqual>
			<isEqual prepend="AND" property="strRead" compareValue="Not yet Read">
				is_read = 'NO'
			</isEqual>
			<isEqual prepend="AND" property="strRead" compareValue="Read">
				is_read = 'YES'
			</isEqual>
			AND title like #strTitle#
		</dynamic>
			AND delyn = 'NO' 
			<![CDATA[ AND strftime('%Y%m%d',create_time) BETWEEN strftime('%Y%m%d','$startDate$') AND strftime('%Y%m%d','$endDate$')  ]]>	 
		ORDER BY create_time DESC
	</select>

</sqlMap>
